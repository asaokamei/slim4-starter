{% extends('layouts/layout.html.twig') %}

{% block contents %}
    <h1><a href="{{ url_for('flash') }}">Flash Samples</a></h1>
    {% if method is defined %}
        <h2>Method: {{ method }}</h2>
    {% endif %}

    <p>the alert above is set by flash. </p>
    <p>you will see another message. </p>
    <ul>
        <li><a href="{{ url_for('flashes', {method: 'page'}) }}">another page</a></li>
        <li><a href="{{ url_for('flashes', {method: 'back'}) }}">redirects back</a></li>
    </ul>

{% endblock %}